<div class="container">
  <div class="row">
    <div class="col-lg-6 landing-left">
      <%#= render "devise/shared/dummy_phone" %>
    </div>
    <div class="col-lg-6 landing-right text-center d-flex align-items-center justify-content-center pt-3 pb-4 " , style="
       border: 2px solid rgba(0, 0, 0, 0.0975); border-radius: 8px; width: 300px; ">
      <div>
        <div class="form-login  box">
          <h3 style="font-family: 'Great Vibes', cursive; font-size: 36px; padding: 5px 10px; font-weight: 600;">Instagram</h3>

          <h5 style="color: #999; font-weight: 600; width: 250px;">Sign up to see photos and <br> videos from your friends. </h5>

          <hr>

          <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>

          <div class="form-group mb-3">
            <%= f.text_field :name, autofocus: true, class: "form-control", placeholder: "Your name" %>
            <% if resource.errors[:name].present? %>
              <small class="text-danger"><%= resource.errors.full_messages_for(:name).first %></small>
            <% end %>
          </div>

          <div class="form-group mb-3">
            <%= f.email_field :email, autofocus: true, class: "form-control", placeholder: "Email" %>
            <% if resource.errors[:email].present? %>
              <small class="text-danger"><%= resource.errors.full_messages_for(:email).first %></small>
            <% end %>
          </div>

          <div class="form-group mb-3">
            <%= f.password_field :password, autocomplete: "off", class: "form-control", placeholder: "Password" %>
            <% if resource.errors[:password].present? %>
              <small class="text-danger"><%= resource.errors.full_messages_for(:password).first %></small>
            <% end %>
          </div>

          <div class="form-group mb-3">
            <%= f.password_field :password_confirmation, autocomplete: "off", class: "form-control", placeholder: "Password confirmation" %>
            <% if resource.errors[:password].any? %>
              <% password_confirmation_error = resource.errors.full_messages_for(:password).find { |msg| msg.include?("confirmation") } %>
              <% if password_confirmation_error %>
                <small class="text-danger"><%= password_confirmation_error %></small>
              <% end %>
            <% end %>
          </div>


          <div class="actions mb-2">
            <%= f.submit "Sign up", class: "btn btn-primary" %>
          </div>
          <% end %>
          <div class="redirect-links box">
            <%= render "devise/shared/links" %>
          </div>
          <p class="light-color">By signing up, you agree to our <br> <strong>Term &amp; Privacy Policy.</strong></p>


        </div>
      </div>

    </div>
  </div>
</div>