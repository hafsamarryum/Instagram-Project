<div class="container">
  <div class="d-flex justify-content-center align-items-center", style="heigth: 400px;">
    <div class="col-lg-6 landing-left border", style="
     border: 2px solid rgba(0, 0, 0, 0.0975);">
     <%#= image_tag "dummyPhone.jpg", alt: "img" , style: "height:200px; width: 200px;" %>
    </div>
    <div class="col-lg-6 landing-right text-center d-flex align-items-center justify-content-center pt-3 pb-4 my-4" , style="
          border: 2px solid rgba(0, 0, 0, 0.0975); border-radius: 8px; width: 290px; ">
      <div>
        <div class="form-login box">
          <h3 style="font-family: 'Great Vibes', cursive; font-size: 36px; padding: 5px 10px; font-weight: 600;">Instagram</h3>

           <h5 style="color: #999; font-weight: 600; width: 250px;">Change your password</h5>

          <hr>

           <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
            <%= f.hidden_field :reset_password_token %>

          <div class="form-group mb-3">
            <%= f.password_field :password, autofocus: true, placeholder: "Enter new Password", class: "form-control", autocomplete: "new-password" %>
             <% if resource.errors[:password].present? %>
              <small class="text-danger"><%= resource.errors.full_messages_for(:password).first %></small>
            <% end %>
          </div>

          <div class="form-group mb-3">
            <%= f.password_field :password_confirmation, autofocus: true, placeholder: "Confirm new password", class: "form-control", autocomplete: "new-password" %>
          </div>

          <div class="actions mb-2">
            <%= f.submit "Change my password", class: "btn btn-primary" %>
          </div>
          <% end %>
           
          <div class="redirect-links box">
            <%= render "devise/shared/links" %>
          </div>
          
        </div>
      </div>
    </div>
  </div>
</div>

