<% if notice.present? || alert.present? %>
  <div class="toast-container position-fixed top-0 end-0 p-3" style="z-index: 1055; right: 20px; top: 20px;">
    
    <% if notice.present? %>
      <div id="flash-notice" class="toast show" role="alert" aria-live="assertive" aria-atomic="true" 
           style="background: rgba(40, 167, 69, 0.5); color: white; border: 1px solid rgba(255, 255, 255, 0.2); 
                  border-radius: 8px; padding: 10px 15px; max-width: 300px; backdrop-filter: blur(5px);">
        <div class="toast-body d-flex justify-content-between align-items-center">
          <%= notice %>
          <button type="button" class="btn-close btn-close-white" data-bs-dismiss="toast" aria-label="Close"></button>
        </div>
      </div>
    <% end %>

    <% if alert.present? %>
      <div id="flash-alert" class="toast show" role="alert" aria-live="assertive" aria-atomic="true" 
           style="background: rgba(220, 53, 69, 0.5); color: white; border: 1px solid rgba(255, 255, 255, 0.2); 
                  border-radius: 8px; padding: 10px 15px; max-width: 300px; backdrop-filter: blur(5px);">
        <div class="toast-body d-flex justify-content-between align-items-center">
          <%= alert %>
          <button type="button" class="btn-close btn-close-white" data-bs-dismiss="toast" aria-label="Close"></button>
        </div>
      </div>
    <% end %>

  </div>

  <script>
    document.addEventListener("DOMContentLoaded", function() {
      setTimeout(function() {
        let notice = document.getElementById("flash-notice");
        let alert = document.getElementById("flash-alert");
        if (notice) notice.classList.remove("show");
        if (alert) alert.classList.remove("show");
      }, 3000); // 3 seconds
    });
  </script>
<% end %>
