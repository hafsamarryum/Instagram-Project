<nav class="navbar navbar-expand-lg navbar-light bg-white border-bottom border-0">
  <div class="container-fluid">
    <!-- Logo -->
    <%= link_to root_path, class:"navbar-brand" do %>
      <%= image_tag "instalogo.png", alt: "Instagram Logo", class: "img-fluid", style: "width: 180px; height: auto;" %>
    <% end %>

    <!-- Centered Search Bar -->
    <div class="mx-auto" >
     <%= form_tag users_path, method: :get, class: "d-flex" do %>
       <%= text_field_tag :query, params[:query], class: "form-control me-2", placeholder: "Search by name or email..." %>
     <% end %>
    </div>

    <!-- Right Side Links/Icons -->
    <ul class="navbar-nav ms-auto d-flex flex-row gap-4">
      <li class="nav-item">
        <%= link_to root_path, class:"nav-link" do %>
          <i class="bi bi-compass fs-4 "></i> 
        <% end %>
      </li>
      <li class="nav-item">
        <% if current_user %>
          <%= button_to destroy_user_session_path, method: :delete, class: "btn nav-link" do %>
            <i class="bi bi-box-arrow-right mt-2 fs-4"></i> 
          <% end %>
         <% else %>
          <%= link_to new_user_session_path, class: "btn nav-link" do %>
            <i class="bi bi-box-arrow-in-right mt-2  fs-4"></i>
          <% end %>
        <% end %>

      </li>
      <li class="nav-item">
        <%= link_to user_path(current_user), class: "nav-link" do %>
        <i class="bi bi-person fs-3"></i>
        <% end %>

      </li>
    </ul>
  </div>
</nav>